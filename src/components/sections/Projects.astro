---
import { projects } from "@/data/cv.json";
import Section from "@/components/Section.astro";
---

<Section title="Projects">
    <ul>
        {
            projects.map(
                ({ name, description, firstDeploy, highlights, url }) => (
                    <li>
                        <a href={url} target="_blank">
                            <article>
                                <header class="header-experience">
                                    <div class="container-title">
                                        <h3 class="title-project">{name}</h3>
                                        <span class="span-first_deploy">
                                            {firstDeploy}
                                        </span>
                                    </div>
                                    <p>{description}</p>
                                </header>
                                <footer>
                                    {highlights.map((highlight) => (
                                        <span>{highlight}</span>
                                    ))}
                                </footer>
                            </article>
                        </a>
                    </li>
                ),
            )
        }
    </ul>
</Section>

<style>
    ul {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 2rem;
        justify-content: center;
    }
    li {
        flex-basis: 18rem;
        height: 200px;
    }
    article {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        color: #777;
        border: 1px solid #e6e6e6;
        padding: 12px;
        border-radius: 6px;
        height: 100%;
        transition: all 0.2s ease;
    }
    article:hover {
        border: 1px solid #b3b3b3;
    }
    article:hover .title-project {
        color: #4f4f4f;
    }
    header {
        display: flex;
        flex-direction: column;
        flex: 1;
        gap: 0.2rem;
    }
    header > p {
        font-size: 0.75rem;
    }
    .container-title {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }
    .container-title > span {
        font-size: 0.74rem;
        line-height: 34%;
    }
    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }
    footer > span {
        font-size: 0.65rem;
        border: 1px solid #e6e6e6;
        padding: 1px 6px;
        border-radius: 6px;
    }
    .title-project {
        color: #2f2f2f;
        font-size: 1.15rem;
        transition: all 0.2s ease;
    }
    .span-first_deploy {
        line-height: 1.5;
    }
</style>
